{% extends 'base.html.twig' %}

{% block title %}Ajout commentaire{% endblock %}

{% block body %}
    <h3>Ajouter un commentaire pour "{{ form.vars.data.lesson.title }}"</h3>

    {{ form_start(form) }}
    {{ form_row(form.email, { 'label': 'Email' }) }}
    {{ form_row(form.author, { 'label': 'Auteur' }) }}
    {{ form_row(form.content, { 'label': 'Contenu' }) }}
    <a href="{{ path('lesson') }}" class="btn btn-warning">Retour</a>
    <a href="{{ path('comment', {'slugLesson': form.vars.data.lesson.slug}) }}" class="btn btn-info">Voir les commentaires</a>
    <button type="submit" class="btn btn-success float-right">Confirmer</button>
    {{ form_end(form) }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Editer une leçon{% endblock %}

{% block body %}
    <h3>Editer une leçon</h3>

    {{ form_start(form) }}

    {{ form_row(form.title, { 'label': 'Titre' }) }}
    {{ form_row(form.teacher, { 'label': 'Professeur' }) }}
    {{ form_row(form.startAt, { 'label': 'Date de début' }) }}
    {{ form_row(form.endAt, { 'label': 'Date de fin' }) }}
    <a href="{{ path('lesson') }}" class="btn btn-danger">Retour</a>
    <button type="submit" class="btn btn-success float-right">Confirmer</button>
    {{ form_end(form) }}
{% endblock %}